<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    >
  <LinearLayout
      android:orientation="horizontal"
      android:gravity="right"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      >
    <ImageView
        android:id="@+id/user_avatar_view"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:src="@drawable/avatar"
        />
    <TextView
        android:id="@+id/user_username_label"
        android:gravity="center"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:textSize="11pt"
        />
    <Button
        android:id="@+id/about_user_button"
        android:enabled="false"
        android:drawableLeft="@drawable/ic_menu_view"
        android:layout_height="fill_parent"
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:onClick="moreUser"
        />
  </LinearLayout>
  <TabHost
      android:id="@android:id/tabhost"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_marginTop="4dp"
      >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
      <TabWidget
          android:id="@android:id/tabs"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          />
      <FrameLayout
          android:id="@android:id/tabcontent"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          >
        <GridView
            android:id="@+id/owned_table"
            android:columnWidth="140dip"
            android:gravity="center"
            android:horizontalSpacing="10dip"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dip"
            />
        <GridView
            android:id="@+id/wanted_table"
            android:columnWidth="140dip"
            android:gravity="center"
            android:horizontalSpacing="10dip"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dip"
            />
      </FrameLayout>
    </LinearLayout>
  </TabHost>
</LinearLayout>
